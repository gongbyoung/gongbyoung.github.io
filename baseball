    <script>
        // ê²Œì„ ë³€ìˆ˜
        let computerNumbers = [];
        let attempts = 0;
        let startTime;
        const maxAttempts = 9;
        const resultDiv = document.getElementById('result');
        const userInput = document.getElementById('user-input');
        const submitBtn = document.getElementById('submit-btn');
        const newGameBtn = document.getElementById('new-game-btn');
        const viewRecordsBtn = document.getElementById('view-records-btn');
        const clearBtn = document.getElementById('clear-btn');
        const recordList = document.getElementById('record-list');
        const totalGamesEl = document.getElementById('total-games');
        const winGamesEl = document.getElementById('win-games');
        const winRateEl = document.getElementById('win-rate');
        const avgAttemptsEl = document.getElementById('avg-attempts');

        // ê²Œì„ ì´ˆê¸°í™”
        function initGame() {
            computerNumbers = generateComputerNumbers();
            attempts = 0;
            resultDiv.innerHTML = '';
            userInput.value = '';
            userInput.focus();
            submitBtn.disabled = false;
            startTime = new Date();
            console.log("ì •ë‹µ: ", computerNumbers.join('')); // í…ŒìŠ¤íŠ¸ìš©
        }

        // ì»´í“¨í„° ìˆ«ì ìƒì„±
        function generateComputerNumbers() {
            const numbers = [];
            while(numbers.length < 3) {
                const num = Math.floor(Math.random() * 10);
                if ((numbers.length === 0 && num !== 0) || 
                    (numbers.length > 0 && !numbers.includes(num))) {
                    numbers.push(num);
                }
            }
            return numbers;
        }

        // ì…ë ¥ ê²€ì¦
        function validateInput(input) {
            if (input.length !== 3) return false;
            
            const numArray = input.split('').map(Number);
            const uniqueNums = [...new Set(numArray)];
            
            // ì¤‘ë³µ ìˆ«ì ì²´í¬
            if (uniqueNums.length !== 3) return false;
            
            // 0ì´ ì²«ë²ˆì§¸ ìë¦¬ì— ìˆëŠ”ì§€ ì²´í¬
            if (numArray[0] === 0) return false;
            
            return true;
        }

        // ê²°ê³¼ ê³„ì‚°
        function calculateResult(userNumbers) {
            let strikes = 0;
            let balls = 0;
            
            userNumbers.forEach((num, index) => {
                if (num === computerNumbers[index]) {
                    strikes++;
                } else if (computerNumbers.includes(num)) {
                    balls++;
                }
            });
            
            return { strikes, balls };
        }

        // ì „ì  ì €ì¥
        function saveGameRecord(isWin) {
            const endTime = new Date();
            const playTime = Math.floor((endTime - startTime) / 1000); // ì´ˆ ë‹¨ìœ„
            
            // ì „ì  ê°ì²´ ìƒì„±
            const record = {
                date: new Date().toLocaleString(),
                result: isWin ? 'ìŠ¹ë¦¬' : 'íŒ¨ë°°',
                attempts: attempts,
                answer: computerNumbers.join(''),
                playTime: `${playTime}ì´ˆ`,
                timestamp: new Date().getTime()
            };
            
            // ê¸°ì¡´ ì „ì  ê°€ì ¸ì˜¤ê¸°
            const records = JSON.parse(localStorage.getItem('baseballRecords') || '[]');
            
            // ìƒˆ ì „ì  ì¶”ê°€ (ìµœì‹ ìˆœìœ¼ë¡œ ì •ë ¬í•˜ê¸° ìœ„í•´ ì•ì— ì¶”ê°€)
            records.unshift(record);
            
            // ìµœëŒ€ 50ê°œ ì „ì ë§Œ ì €ì¥
            if (records.length > 50) {
                records.pop();
            }
            
            // ë¡œì»¬ ìŠ¤í† ë¦¬ì§€ì— ì €ì¥
            localStorage.setItem('baseballRecords', JSON.stringify(records));
            
            // ì „ì  í™”ë©´ ì—…ë°ì´íŠ¸
            updateRecordsDisplay();
        }

        // ì „ì  í™”ë©´ ì—…ë°ì´íŠ¸
        function updateRecordsDisplay() {
            const records = JSON.parse(localStorage.getItem('baseballRecords') || '[]');
            recordList.innerHTML = '';
            
            // í†µê³„ ê³„ì‚°
            const totalGames = records.length;
            const winGames = records.filter(r => r.result === 'ìŠ¹ë¦¬').length;
            const winRate = totalGames > 0 ? Math.round((winGames / totalGames) * 100) : 0;
            const totalAttempts = records.reduce((sum, record) => sum + record.attempts, 0);
            const avgAttempts = totalGames > 0 ? (totalAttempts / totalGames).toFixed(1) : 0;
            
            // í†µê³„ ì—…ë°ì´íŠ¸
            totalGamesEl.textContent = totalGames;
            winGamesEl.textContent = winGames;
            winRateEl.textContent = `${winRate}%`;
            avgAttemptsEl.textContent = avgAttempts;
            
            // ì „ì  ëª©ë¡ ì—…ë°ì´íŠ¸
            records.forEach(record => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${record.date}</td>
                    <td>${record.result === 'ìŠ¹ë¦¬' ? '<span style="color:#2ecc71">ìŠ¹ë¦¬</span>' : '<span style="color:#e74c3c">íŒ¨ë°°</span>'}</td>
                    <td>${record.attempts}íšŒ</td>
                    <td>${record.answer}</td>
                    <td>${record.playTime}</td>
                `;
                recordList.appendChild(row);
            });
        }

        // ê²°ê³¼ í‘œì‹œ
        function displayResult(userInputValue, result) {
            attempts++;
            const attemptDiv = document.createElement('div');
            attemptDiv.className = 'attempt';
            
            if (result.strikes === 3) {
                attemptDiv.innerHTML = `
                    <div>${attempts}íšŒì°¨: ${userInputValue}</div>
                    <div class="win-message">ğŸ‰ ì •ë‹µì…ë‹ˆë‹¤! ${attempts}ë²ˆ ë§Œì— ë§ì·„ì–´ìš”!</div>
                `;
                submitBtn.disabled = true;
                saveGameRecord(true); // ì „ì  ì €ì¥ (ìŠ¹ë¦¬)
            } else if (attempts >= maxAttempts) {
                attemptDiv.innerHTML = `
                    <div>${attempts}íšŒì°¨: ${userInputValue}</div>
                    <div>ê²Œì„ ì˜¤ë²„! ì •ë‹µì€ <strong>${computerNumbers.join('')}</strong> ì…ë‹ˆë‹¤</div>
                `;
                submitBtn.disabled = true;
                saveGameRecord(false); // ì „ì  ì €ì¥ (íŒ¨ë°°)
            } else {
                if (result.strikes === 0 && result.balls === 0) {
                    attemptDiv.innerHTML = `
                        <div>${attempts}íšŒì°¨: ${userInputValue}</div>
                        <div><span class="out">OUT</span></div>
                    `;
                } else {
                    attemptDiv.innerHTML = `
                        <div>${attempts}íšŒì°¨: ${userInputValue}</div>
                        <div>
                            <span class="strike">${result.strikes}S</span> 
                            <span class="ball">${result.balls}B</span>
                        </div>
                    `;
                }
            }
            
            resultDiv.prepend(attemptDiv);
        }

        // ê²Œì„ ì‹¤í–‰
        submitBtn.addEventListener('click', () => {
            const input = userInput.value;
            
            if (!validateInput(input)) {
                alert('ì˜¬ë°”ë¥¸ 3ìë¦¬ ìˆ«ìë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”!\n(ì²«ìë¦¬ 0 ì•ˆë¨, ì¤‘ë³µ ìˆ«ì ì•ˆë¨)');
                userInput.value = '';
                userInput.focus();
                return;
            }
            
            const userNumbers = input.split('').map(Number);
            const result = calculateResult(userNumbers);
            displayResult(input, result);
            
            userInput.value = '';
            userInput.focus();
        });

        userInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') submitBtn.click();
        });

        newGameBtn.addEventListener('click', initGame);
        
        viewRecordsBtn.addEventListener('click', () => {
            document.querySelector('.record-section').scrollIntoView({ behavior: 'smooth' });
        });
        
        clearBtn.addEventListener('click', () => {
            if (confirm('ëª¨ë“  ì „ì  ê¸°ë¡ì„ ì‚­ì œí•˜ì‹œê² ìŠµë‹ˆê¹Œ?\nì´ ì‘ì—…ì€ ë˜ëŒë¦´ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.')) {
                localStorage.removeItem('baseballRecords');
                updateRecordsDisplay();
                alert('ì „ì  ê¸°ë¡ì´ ì´ˆê¸°í™”ë˜ì—ˆìŠµë‹ˆë‹¤.');
            }
        });

        // ê²Œì„ ì‹œì‘ ë° ì „ì  ë¡œë“œ
        initGame();
        updateRecordsDisplay();
    </script>
</body>
